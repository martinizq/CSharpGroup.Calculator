<Window x:Class="CSharpGroup.Calculator.MainWindowV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpGroup.Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <local:MainWindowVM />
    </Window.DataContext>
    <Grid>
        <DockPanel>
            <Label Content="{Binding title}" DockPanel.Dock="Top" />
            <!--This is just temporary.  These buttons wil be programatically built by using a collection of button made on the ViewModel (VM) side.-->
            <UniformGrid Columns="3">
                <Button Content="Sample Button" Command="{Binding commandButton}" CommandParameter="sampleButton" />
                <Button Content="Sample Button" Command="{Binding commandButton}" CommandParameter="sampleButton" />
                <Button Content="Sample Button" Command="{Binding commandButton}" CommandParameter="sampleButton" />
                <Button Content="Sample Button" Command="{Binding commandButton}" CommandParameter="sampleButton" />
            </UniformGrid>
        </DockPanel>
    </Grid>
</Window>